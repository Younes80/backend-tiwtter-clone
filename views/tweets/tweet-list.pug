if tweets 
    each tweet in tweets 
        div(class="card tweet-element")
            div(class="card-body d-flex flex-row align-items-center justify-content-between")
                div(class="d-flex flex-column")
                    div(d-flex)
                        img(width="30" height="30" src=tweet.author.avatar, alt="avatar")
                        span(class="ms-3")=tweet.author.username
                    p(class="card-text")= tweet.content
                if editable && tweet.author._id.toString() === currentUser._id.toString()
                    div(class="d-flex flex-row align-items-center")
                        a(class="fas fa-edit fa-lg me-2 text-decoration-none text-muted" href="/tweets/edit/" + tweet._id)
                        i(class="far fa-trash-alt fa-lg text-danger cursor-pointer" tweetid=tweet._id)
